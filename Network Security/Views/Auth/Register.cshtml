@{
    ViewData["Title"] = "Register";
}
<form method="post" asp-controller="Auth" asp-action="Register" class="register-form">
    <h2 class="text-center mb-4">Register</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Error
        </div>
    }

    <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input name="username" id="username" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input name="password" id="password" type="password" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input name="email" id="email" type="email" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="firstName" class="form-label">First Name</label>
        <input name="firstName" id="firstName" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="lastName" class="form-label">Last Name</label>
        <input name="lastName" id="lastName" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="roleId" class="form-label">Select Role</label>
        <select name="roleId" id="roleId" class="form-control" required>
            <option value="" disabled selected>Choose role...</option>
            <option value="1">Admin</option>
            <option value="2">User</option>
        </select>
    </div>

    <button type="submit" class="btn btn-register w-100">Register</button>
</form>

<style>
    /* Center the form and give a nice background */
    .register-form {
        max-width: 400px;
        margin: 50px auto;
        padding: 20px;
        background: #f0f8ff; /* Light blue background for register form */
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        .register-form h2 {
            font-family: 'Arial', sans-serif;
            color: #333;
            font-weight: 600;
        }

    .form-control {
        border-radius: 8px;
        border: 1px solid #ccc;
        transition: border-color 0.3s;
    }

        .form-control:focus {
            border-color: #28a745; /* Green color for focused inputs */
            box-shadow: 0 0 5px rgba(40, 167, 69, 0.4);
        }

    .btn-register {
        background-color: #28a745; /* Green background for register button */
        border-color: #28a745;
        padding: 10px;
        font-size: 16px;
        border-radius: 8px;
        transition: background-color 0.3s, transform 0.2s;
    }

        .btn-register:hover {
            background-color: #218838;
            border-color: #218838;
            transform: scale(1.05);
        }

    /* Add some nice spacing and alignment */
    .mb-3 {
        margin-bottom: 1.5rem;
    }

    label {
        font-weight: 500;
        color: #666;
    }

    /* Optional: Add a background gradient */
    body {
        font-family: 'Arial', sans-serif;
    }

    /* Style for the error message */
    .alert-danger {
        margin-bottom: 20px;
        padding: 10px;
        font-size: 14px;
        color: red;
        background: #ffc0cb;
    }
</style>
