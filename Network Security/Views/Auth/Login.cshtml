@{
    ViewData["Title"] = "Login";
}
<form method="post" asp-controller="Auth" asp-action="login" class="login-form">
    <h2 class="text-center mb-4">Login</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Error
        </div>
    }

    <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input name="username" id="username" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input name="password" id="password" type="password" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary w-100">Login</button>
</form>

<style>
    /* Center the form and give a nice background */
    .login-form {
        max-width: 400px;
        margin: 50px auto;
        padding: 20px;
        background: #f8f9fa;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        .login-form h2 {
            font-family: 'Arial', sans-serif;
            color: #333;
            font-weight: 600;
        }

    .form-control {
        border-radius: 8px;
        border: 1px solid #ccc;
        transition: border-color 0.3s;
    }

        .form-control:focus {
            border-color: #0056b3;
            box-shadow: 0 0 5px rgba(0, 86, 179, 0.4);
        }

    .btn-primary {
        background-color: #4d87ff;
        border-color: #4d87ff;
        padding: 10px;
        font-size: 16px;
        border-radius: 8px;
        transition: background-color 0.3s, transform 0.2s;
    }

        .btn-primary:hover {
            background-color: #3a6cc3;
            border-color: #3a6cc3;
            transform: scale(1.05);
        }

    /* Add some nice spacing and alignment */
    .mb-3 {
        margin-bottom: 1.5rem;
    }

    label {
        font-weight: 500;
        color: #666;
    }

    /* Add subtle hover effect for inputs */
    .form-control:hover {
        border-color: #0056b3;
    }

    /* Optional: Add a background gradient */
    body {
        background: linear-gradient(120deg, #f0f4f8, #e0e4e8);
        font-family: 'Arial', sans-serif;
    }

    /* Style for the error message */
    .alert-danger {
        margin-bottom: 20px;
        padding: 10px;
        font-size: 14px;
        color: red;
        background: #ffc0cb;
    }
</style>
