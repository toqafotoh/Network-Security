<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - NetworkSecurityApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container-fluid">
            <div class="d-flex justify-content-between align-items-center w-100">
                <!-- Logo left -->
                <a class="navbar-brand fw-bold text-primary" href="/">
                    <i class="bi bi-shield-lock-fill me-1"></i> NetworkSecurityApp
                </a>

                <!-- Right content -->
                @{
                    var hasToken = Context.Session.GetString("accessToken") != null;
                }

                <div class="d-flex align-items-center gap-2">
                    @if (hasToken)
                    {
                        <form method="post" action="/Auth/Logout" class="d-inline">
                            <button type="submit" class="btn btn-link nav-link text-dark d-flex align-items-center p-0 border-0 bg-transparent">
                                <i class="bi bi-box-arrow-right me-1"></i> Logout
                            </button>
                        </form>
                    }
                    else
                    {
                        <a class="nav-link text-dark d-flex align-items-center" href="/Auth/Login">
                            <i class="bi bi-box-arrow-in-right me-1"></i> Login
                        </a>
                        <a class="nav-link text-dark d-flex align-items-center" href="/Auth/Register">
                            <i class="bi bi-person-plus-fill me-1"></i> Register
                        </a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>
</body>
</html>
